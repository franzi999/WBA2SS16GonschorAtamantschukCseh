          ziel: $("#ziel").val(),
          plaetze: $("#plaetze").val(),
          u_id: $("#sp").text()
        };
        alert("fahrt puten");
        alert(newFahrt.u_id);

        $.ajax({
          type: 'PUT',
          host: 'localhost',
          url: '/fahrt/' + <%= fahrtID %> ,
          contentType: 'application/json',
          data: JSON.stringify(newFahrt),
          success: function(newFahrt){
            alert('Fahrt aktualiesiert');
            console.log(JSON.stringify(newFahrt));
          }
        });
      });
    });
