</header>
<body>
    <div id="mid">
        <div id="uid">
          <p>Ihre Persönliche Daten</p>

            <ul id="udlist">

                <li>Name: <%= u.nachname%> </li><br>
                <li>Vorname: <%= u.vorname %> </li><br>
                <li>Email: <%= u.email %> </li><br>
                <li>Telefon: <%= u.tel %> </li><br>
                <li>Handy: <%= u.mobil %> </li><br>
                <li>Fahrzeug: <%= u.car %> </li><br>

            </ul>

            <form>
                <input type="button" name="submit" onclick="location.href='http://localhost:3001/putuser/24'" value="Ändern">
                <input type="button" name="submit" onclick="location.href='http://localhost:3001/userdel/24'" value="Löschen">
            </form>
        </div>
        <div class="trenner">
            <p id="ihre">Ihre Fahrten: <%= nores%></p>
        </div>

            <% userFahrten.forEach(function(fahrt) { %>
              <div class="users">
                  <ul class="list">
                      <li>Start: <%= fahrt.start%> </li><br>
                      <li>Ziel: <%= fahrt.ziel %> </li><br>
                      <li>Plaetze: <%= fahrt.plaetze %> </li><br>
                  </ul>
                      <input type="button" name="submit" onclick="location.href='http://localhost:3001/putfahrt/<%= fahrt.id %>'" value="Ändern">
                      <input type="button" name="submit" onclick="location.href='http://localhost:3001/fahrtdel/<%= fahrt.id %>'" value="Löschen">
              </div>
              <% }); %>
    </div>
