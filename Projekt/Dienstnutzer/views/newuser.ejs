<!-- FENSTER -->

<div id="modal_form">
      <span id="modal_close">X</span>
            <p id="mel">
                Neuer Benutzer erfolgreich erstellt
            </p>
            <p id ="hide">
              Ihre Benutzer-Id:<span id="u" style="color: #37A953;"> </span>
            </p>
            <p id="hideto">
              Bawahren Sie diese gut auf, um auf Ihre persönlichen Daten <br>
              zugreifen zu können!
            </p>
</div>
<div id="overlay"></div>

<script type="text/javascript">

  $(function(){
    $("#w").click(function(event) {
      alert("CHeck");
      event.preventDefault();
      var userid = $('#mail').val();
      $.ajax({
        type: 'GET',
        host: 'localhost',
        url: '/users/' + userid,
        contentType: 'text/plain',
        success: function(data){
          if (data.length==0){
            $('#mel').html('user mit der id: '+userid+ ' existiert nicht');
            $('#hide').css('display', 'none');
            $('#hideto').css('display', 'none');

            $('#overlay').fadeIn(400,
              function(){
                $('#modal_form')
                  .css('display', 'block')
                  .animate({opacity: 1, top: '50%'}, 200);
              });

              $('#modal_close, #overlay').click( function(){
		              $('#modal_form')
			               .animate({opacity: 0, top: '45%'}, 200,
				                 function(){
					                      $(this).css('display', 'none');
					                      $('#overlay').fadeOut(400);
				                          }
			                        );
	            });
          }
          else {
            document.location.href = 'http://localhost:3001/newfahrt/' + userid;
          }
        }
      });
    });
  });

</script>
